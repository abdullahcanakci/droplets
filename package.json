{
  "name": "@abdullahcanakci/droplets",
  "author": "Abdullah Canakci",
  "license": "MIT",
  "version": "0.0.1",
  "description": "Composable logic, one droplet at a time",
  "homepage": "https://github.com/abdullahcanakci/droplets#readme",
  "type": "module",
  "main": "./dist/emits.umd.cjs",
  "module": "./dist/emits.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "typescript",
    "library",
    "node",
    "pipeline",
    "chain-of-responsibility"
  ],
  "bugs": {
    "url": "https://github.com/abdullahcanakci/droplets/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abdullahcanakci/droplets.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "exports": {
    ".": {
      "import": "./dist/droplets.js",
      "require": "./dist/droplets.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
